<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="72dp"
        android:layout_height="match_parent"
        android:background="#1888"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/default_textPadding" >

        <TextView
            android:id="@id/activity_dateBegin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#a000"
            android:textSize="12sp" />

        <TextView
            android:id="@id/activity_dateEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#2000"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/default_textPadding" >

        <TextView
            android:id="@id/activity_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:hint="@string/hint_event_name"
            android:lines="1"
            android:maxLines="2"
            android:textColor="@android:color/black"
            android:textIsSelectable="false"
            android:textSize="22sp" />

        <TextView
            android:id="@id/activity_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/dark_gray"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:id="@id/activity_approved"
        android:layout_width="8dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp" />

</LinearLayout>