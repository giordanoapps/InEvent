<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:dividerPadding="50dp"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".app.user.UserSettingsActivity" >

    <QuickContactBadge
        android:id="@id/person_profilePicture"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:background="@color/person_profilelight_gray"
        android:src="@drawable/ic_social_person" />

    <TextView
        android:id="@id/person_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fontFamily="sans-serif-light"
        android:hint="@string/hint_person_myName"
        android:padding="@dimen/default_textPadding"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</LinearLayout>