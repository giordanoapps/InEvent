<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="#f8f8f8"
        android:padding="4dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/attendance_searchBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_action_search"
            android:drawablePadding="8dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:ems="6"
            android:hint="@string/hint_search"
            android:imeOptions="actionGo"
            android:inputType="number"
            android:padding="@dimen/default_textPadding"
            android:textSize="22sp" />

        <ImageButton
            android:id="@+id/attendance_confirmPresence"
            android:layout_width="72dp"
            android:layout_height="60dp"
            android:background="@drawable/abc_item_background_holo_light"
            android:src="@drawable/ic_navigation_accept"
            android:contentDescription="@string/description_attendance_confirm"/>
    </LinearLayout>

    <View style="@style/Divider.Horizontal" />

    <ViewAnimator
        android:id="@id/viewAnimator"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <include layout="@layout/cell_loading" />

        <ListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fastScrollEnabled="true" />
    </ViewAnimator>

</LinearLayout>