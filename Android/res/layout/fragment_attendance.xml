<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:trilha="http://schemas.android.com/apk/res/com.estudiotrilha.inevent"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:id="@android:id/progress"
        layout="@layout/cell_loading" />

    <FrameLayout
        android:id="@+id/listContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.fortysevendeg.swipelistview.SwipeListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawSelectorOnTop="false"
            android:fastScrollAlwaysVisible="true"
            android:fastScrollEnabled="true"
            android:paddingRight="24dp"
            trilha:swipeBackView="@id/attender_backView"
            trilha:swipeCloseAllItemsWhenMoveList="true"
            trilha:swipeFrontView="@id/attender_frontView"
            trilha:swipeMode="both"
            trilha:swipeOpenOnLongPress="false" />

        <TextView
            android:id="@android:id/empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/empty_eventActivityAttenders"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:visibility="invisible" />
    </FrameLayout>

</FrameLayout>